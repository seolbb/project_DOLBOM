<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
	<settings>
		<setting value="NULL" name="jdbcTypeForNull"/>
	</settings>
	
	
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property value="oracle.jdbc.OracleDriver" name="driver"/>
		<property value="jdbc:oracle:thin:@localhost:1521:xe" name="url"/>
		<property value="dolbom" name="username"/>
		<property value="dolbompw" name="password"/>
      </dataSource>
    </environment>
  </environments>
  
  <mappers>
    <!--  <mapper resource="org/mybatis/example/BlogMapper.xml"/>-->
    <mapper resource= "com/bc/mybatis/admin/mapper.xml" />
    
  </mappers>
</configuration>
